<UserControl x:Class="WpfAppHoliday.UserControls.UserControlButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppHoliday.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="cutomButton">
    <Button Click="Button_Click" Style="{StaticResource CustomButtonStyle}">
        <WrapPanel>
            <TextBlock Text="{Binding ElementName=cutomButton, Path=Text}"/>
        </WrapPanel>
    </Button>
</UserControl>
